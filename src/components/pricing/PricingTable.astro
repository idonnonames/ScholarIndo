---
const services = [
  {
    step: '01',
    name: 'Empowering Dreams, One Scholarship at a Time',
    description:
      'Our platform connects students with a vast array of scholarships tailored to their unique needs and aspirations.',
  },
  {
    step: '02',
    name: 'Unlock Your Potential',
    description:
      'Explore a world of financial aid opportunities and gain the support you need to achieve your educational goals.',
  },
  {
    step: '03',
    name: 'Find Your Future, Fund Your Dreams',
    description:
      'Discover the scholarships that can make it happen.',
  },
];
---

<section class="py-16 sm:py-20">
  <div class="mx-auto max-w-2xl px-4 sm:px-6 lg:max-w-7xl lg:px-8">
    <div class="flex flex-col gap-12 sm:gap-16">
      <h2 class="text-3xl font-medium tracking-tight sm:text-4xl">Services</h2>
      <div class="grid gap-8 lg:grid-cols-3">
        {
          services.map((service) => (
            <div class="bg-primary-500/10 dark:bg-primary-400/10 flex flex-col gap-12 rounded-3xl px-6 py-8">
              <p class="text-sm">{service.step}</p>
              <div class="flex flex-col gap-4">
                <h3 class="text-xl font-medium">{service.name}</h3>
                <p class="text-primary-950/70 dark:text-primary-200/70 text-base sm:text-lg">
                  {service.description}
                </p>
              </div>
            </div>
          ))
        }
      </div>
    </div>
  </div>
</section>
